<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
 "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
<bean id="triangle" class ="com.hcl.Triangle" >
<constructor-arg ref = "pointA"></constructor-arg>
<constructor-arg ref = "pointB"></constructor-arg>
<constructor-arg ref = "pointC"></constructor-arg>
</bean>

<bean id="pointA" class ="com.hcl.Point" >
<constructor-arg value = "10.0"></constructor-arg>
<constructor-arg value = "20.0"></constructor-arg>
</bean>

<bean id="pointB" class ="com.hcl.Point" >
<constructor-arg value = "30.0"></constructor-arg>
<constructor-arg value = "40.0"></constructor-arg>
</bean>

<bean id="pointC" class ="com.hcl.Point" >
<constructor-arg value = "50.0"></constructor-arg>
<constructor-arg value = "60.0"></constructor-arg>
</bean>
</beans>